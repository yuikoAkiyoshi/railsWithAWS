<%= render 'shared/error_messages' %>

<div class="commentForm">
  <p class="commentForm__title">コメントする</p>
  <div class="commentForm__inner">
    <%= form_for comment do |f| %>
      <%= f.hidden_field :article_id %>
      <div class="commentForm__name">
        <%= f.text_field :name, value: '名前' %>
      </div>
      <div class="commentForm__comment">
        <%= f.text_area :comment, rows: 4, value: 'テキストを入力' %>
      </div>
      <div class="commentForm__btn">
      <%= f.submit '送信' %>
      </div>
    <% end %>
  </div>
</div>
