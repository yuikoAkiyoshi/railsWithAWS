<div class="container container--small container--users">
  <div class="users">
    <h1 class="users__title">SIGNING</h1>

    <%= render 'shared/error_messages' %>

    <%= form_for @user do |f| %>
      <div class="users__form">
        <%= f.label :name, 'ユーザー名' %>
        <%= f.text_field :name, class: 'users__input' %>
      </div>
      <div class="users__form">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'users__input' %>
      </div>
      <div class="users__form">
        <%= f.label :password_confirmation, 'パスワード（確認）' %>
        <%= f.password_field :password_confirmation, class: 'users__input' %>
      </div>

      <%= f.submit '作成', class: 'users__btn' %>
    <% end %>
  </div>
</div>
